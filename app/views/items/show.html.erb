<div class="text-center page-title">
  <h1><%= @item.brand + " " + @item.model %></h1>
  <hr>
</div>
<div class="row text-center">
  <%= image_tag(@item.image_path, alt: "#{@item.brand} #{@item.model}", class: "thumbnail") %>
</div>
<div class="row text-center">
  <hr>
  <h4>Average Rating: <%= @item.avg_rating %></h4>
  <h3>User Reviews</h3>
  <%= render partial: "partials/item_reviews_table", locals: { reviews: @reviews, user: @user, item: @item } %>
</div>
  